# Database Connection (e.g., from Neon, Supabase, or Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# Server Port (usually provided by host, default to 3000 locally)
PORT=3000

# Allowed Frontend Origins (CORS protection)
# In production, set this to your frontend URL (e.g., https://my-app.vercel.app)
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-app.vercel.app
